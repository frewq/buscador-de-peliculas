<div class="contenedor">
<% for (let i = 0; i < title.length; i++) {%>

        <div class="card tarjeta clearfix hidden-md-down" style="width: 18rem;">

          <!-- tiene que recibir la imagen desde un regex -->
          <a href="<%= calidad[i] %>" data-lightbox="image-<%=[i]%>" data-title="<%= title[i] + " (" + year[i] + ")"%>"><img src="<%= busqueda[i] %>" class="card-img-top" alt=""></a>

          <div class="card-body">
            <h5 class="card-title"><%= title[i] + " (" + year[i] + ")"%></h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
        
<% } %>
